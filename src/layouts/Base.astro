---
import type { ImageMetadata, MarkdownLayoutProps } from 'astro'
import { getEntry } from 'astro:content'

import Head from '@components/Head.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

import Image from '@components/Image.astro'
import Dated from '@components/Dated.astro'
import Authors from '@components/Authors.astro'
import type { CollectionEntry } from 'astro:content'

type Props = MarkdownLayoutProps<{
	title: string
	blurb: string
	dated?: Date
	authors?: (string | CollectionEntry<'authors'>)[]
	image?: ImageMetadata | string
}>

// destructure the props so it works from MDX fronmatter or props directly
const { dated, title, blurb, image, authors, ...rest } = Astro.props.frontmatter || Astro.props
---

<!doctype html>
<html lang='en' data-theme='blackboard'>
	<head>
		<Head title={title} blurb={blurb} image={image} />
	</head>
	<body>
		<Header />

		{image && <Image src={image} alt={title} />}

		<main>
			<slot name='intro'>
				<section class='intro'>
					<center>
						<h1 class='intro-title'>{title}</h1>
						<p class='intro-subtitle'>
							{
								dated && (
									<>
										on <Dated dated={dated} />
									</>
								)
							}
							{
								authors && (
									<>
										by <Authors authors={authors} />
									</>
								)
							}
						</p>
						<hr />

						{blurb && <p class='intro-blurb'>{blurb}</p>}
					</center>
				</section>
			</slot>

			<slot />
		</main>

		<Footer />
	</body>
</html>

<style>
	section.intro {
		/* width: 60%; */
		max-width: 1200px;
		margin: 0 auto;

		/* align-items: center; */
		/* justify-content: center; */
	}
	img {
		display: block;
		object-fit: cover;
		/* height: 50vh; */
		height: 33vh;
		width: 100%;
		border-bottom: 1px solid var(--wow-border);
	}

	section.intro .intro-subtitle {
		/* font-size: 1.1em; */
	}
	section.intro .intro-blurb {
		/* font-size: 1.1em; */
		/* font-size: 1.1em; */
		/* make italic */
		font-style: italic;
	}

	.intro h1 {
		/* font-size: 2.4em; */
	}

	section.intro p {
		margin: 0.5em 0;
		/* font-size: 1.25em; */
		/* margin: 0; */
	}
</style>
