---
import type { ImageMetadata, MarkdownLayoutProps } from 'astro'

import Base from '@layouts/Base.astro'
import Page from '@layouts/Page.astro'
import Image from '@components/Image.astro'
import Authors from '@components/Authors.astro'
import Dated from '@components/Dated.astro'
import type { CollectionEntry } from 'astro:content'

type Props = MarkdownLayoutProps<{
	title: string
	blurb: string
	authors: (string | CollectionEntry<'authors'>)[]
	image?: ImageMetadata | string
	dated?: Date
}>

const { title, blurb, image, dated, authors, ...rest } = Astro.props.frontmatter || Astro.props
---

<Page title={title} blurb={blurb} image={image} authors={authors} dated={dated} {...rest}>
	<article>
		<slot />
	</article>
</Page>





